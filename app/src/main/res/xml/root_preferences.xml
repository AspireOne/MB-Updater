<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="Nastavení aktualizací" app:iconSpaceReserved="false">

        <!-- TODO: Extract the preference keys to strings.xml and use them in code-->
        <ListPreference
            app:title="Počet stránek na aktualizování"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="25"
            app:dialogTitle="Vyberte počet stránek"
            app:entries="@array/updated_pages_entries"
            app:entryValues="@array/updated_pages_values"
            app:iconSpaceReserved="false"
            app:persistent="true"
            android:id="@+id/settingPageAmount"
            app:key="@string/setting_pages_amount_key" />
        <Preference
            app:title="Čas automatických aktualizací"
            app:summary="00:00"
            app:iconSpaceReserved="false"
            app:persistent="true"
            android:id="@+id/settingUpdateTime"
            app:key="@string/setting_update_time_key" />
        <SwitchPreferenceCompat
            app:title="Dodatečně aktualizovat"
            app:defaultValue="true"
            app:summary="Pokud v čase aktualizace chybí internet, provede se hned, jakmile bude dostupný."
            app:iconSpaceReserved="false"
            app:persistent="true"
            android:id="@+id/settingUpdateAdditionally"
            app:key="@string/setting_update_additionally_key" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Přihlašovací údaje do mimibazaru" app:iconSpaceReserved="false">
        <EditTextPreference
            app:title="Uživatelské jméno"
            app:useSimpleSummaryProvider="true"
            app:iconSpaceReserved="false"
            app:persistent="true"
            android:id="@+id/settingUsername"
            app:key="@string/setting_username_key" />
        <EditTextPreference
            app:title="Uživatelské heslo"
            app:useSimpleSummaryProvider="true"
            app:iconSpaceReserved="false"
            app:persistent="true"
            android:id="@+id/settingPassword"
            app:key="@string/setting_password_key" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Manipulace s internetem" app:iconSpaceReserved="false">
        <Preference
            app:iconSpaceReserved="false"
            app:selectable="false"
            app:enabled="true"
            app:summary="Pokud v době aktualizace chybí internet, aplikace se může pokusit ho zapnout. Po aktualizaci bude uveden do původního stavu." />

        <SwitchPreferenceCompat
            app:title="Povolit zapnutí WiFi"
            app:defaultValue="true"
            app:summaryOff="Aplikace se nepokusí zapnout WiFi."
            app:summaryOn="Aplikace může zapnout wifi."
            app:iconSpaceReserved="false"
            app:persistent="true"
            android:id="@+id/settingAllowWifiChange"
            app:key="@string/setting_allow_wifi_change_key" />

        <SwitchPreferenceCompat
            app:title="Povolit zapnutí mobilních dat (vyžaduje root)"
            app:defaultValue="true"
            app:dependency="setting_root_permission"
            app:singleLineTitle="false"
            app:summaryOff="Aplikace se nepokusí zapnout data."
            app:summaryOn="Aplikace může zapnout data."
            app:iconSpaceReserved="false"
            app:persistent="true"
            android:id="@+id/settingAllowDataChange"
            app:key="@string/setting_allow_data_change_key" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Ostatní" app:iconSpaceReserved="false">
        <SwitchPreferenceCompat
            app:title="Oznámit o úspěšné aktualizaci"
            app:defaultValue="true"
            app:summaryOff="Po úspěšné aktualizaci se žádné oznámení nezobrazí."
            app:summaryOn="Po úspěšné aktualizaci se zobrazí oznámení."
            app:iconSpaceReserved="false"
            app:persistent="true"
            android:id="@+id/settingSuccesfullUpdateNotification"
            app:key="@string/setting_successful_update_notification_key" />

        <Preference
            app:title="Povolení chodu na pozadí"
            app:summary="Na některých zařízeních je třeba toto povolit, aby mohly automatické aktualizace fungovat. Klikněte pro povolení."
            app:iconSpaceReserved="false"
            app:persistent="true"
            android:id="@+id/settingBatteryException"
            app:key="@string/setting_battery_exception_key" />
        <Preference
            app:title="Root oprávnění"
            app:summary="Pokud nemáte nainstalovaný root, nemůžete toto povolení udělit. Umožňuje aplikaci zapnout data. Pro povolení klikněte."
            app:iconSpaceReserved="false"
            android:id="@+id/settingRootPermission"
            app:key="@string/setting_root_permission_key" />
    </PreferenceCategory>
</PreferenceScreen>