<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16sp">

        <EditText
            android:id="@+id/updateTimeBox"
            android:layout_width="76dp"
            android:layout_height="43dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:focusable="false"
            android:inputType="time"
            android:longClickable="false"
            android:selectAllOnFocus="false"
            android:text="7:45"
            android:textIsSelectable="false"
            app:layout_constraintStart_toEndOf="@+id/updateInTxt"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/updatedPagesSpinner"
            android:layout_width="175dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:entries="@array/updated_pages_entries"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/pagesToUpdateTxt" />

        <TextView
            android:id="@+id/allowChangeInternetTxt"
            android:layout_width="255dp"
            android:layout_height="91dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:text="Povolit zapnutí internetu pokud v čase aktualizace chybí připojení (po aktualizaci bude vrácen do původního stavu)"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pagesToUpdateTxt" />

        <TextView
            android:id="@+id/pagesToUpdateTxt"
            android:layout_width="135dp"
            android:layout_height="47dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:text="Počet stránek na aktualizování"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/updateInTxt" />

        <TextView
            android:id="@+id/updateInTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:text="Aktualizovat v"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Switch
            android:id="@+id/allowChangeWifiSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:text="WiFi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/allowChangeInternetTxt" />

        <Switch
            android:id="@+id/allowChangeDataSwitch"
            android:layout_width="90dp"
            android:layout_height="27dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="Data"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/allowChangeWifiSwitch" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>