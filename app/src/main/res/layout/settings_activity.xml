<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8sp"
        app:layout_constraintEnd_toStartOf="@+id/updateTimeBox"
        app:layout_constraintStart_toStartOf="@+id/updateTimeBox">

        <EditText
            android:id="@+id/passwordTextbox"
            android:layout_width="174dp"
            android:layout_height="40dp"
            android:layout_marginStart="61dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="textVisiblePassword|textPassword"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/mimibazarPasswordTextView"
            app:layout_constraintTop_toBottomOf="@+id/usernameTextbox"
            android:autofillHints="" />

        <TextView
            android:id="@+id/mimibazarPasswordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="25dp"
            android:text="Mimibazar heslo:"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mimibazarUsernameTextView" />

        <TextView
            android:id="@+id/mimibazarUsernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="20dp"
            android:text="Mimibazar uživ. jméno:"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backgroundRunAllowedTxt" />

        <TextView
            android:id="@+id/notifyAboutSuccesfullUpdateTxt"
            android:layout_width="159dp"
            android:layout_height="45dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:text="@string/notify_about_succesful_update"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/allowChangeInternetTxt" />

        <Switch
            android:id="@+id/notifyAboutSuccesfullUpdateSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toEndOf="@+id/notifyAboutSuccesfullUpdateTxt"
            app:layout_constraintTop_toBottomOf="@+id/allowChangeInternetTxt"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/backgroundRunAllowedTxt"
            android:layout_width="124dp"
            android:layout_height="47dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="20dp"
            android:text="@string/background_run_allowed"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rootAllowedTxt" />

        <Button
            android:id="@+id/allowRootButt"
            android:layout_width="99dp"
            android:layout_height="37dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/allow"
            app:layout_constraintStart_toEndOf="@+id/rootAllowedValue"
            app:layout_constraintTop_toBottomOf="@+id/notifyAboutSuccesfullUpdateTxt" />

        <TextView
            android:id="@+id/rootAllowedTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:text="@string/root_allowed"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notifyAboutSuccesfullUpdateTxt" />

        <TextView
            android:id="@+id/rootAllowedValue"
            android:layout_width="43dp"
            android:layout_height="22dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:text="@string/yes"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/rootAllowedTxt"
            app:layout_constraintTop_toBottomOf="@+id/notifyAboutSuccesfullUpdateTxt" />

        <TextView
            android:id="@+id/backgroundRunAllowedValue"
            android:layout_width="43dp"
            android:layout_height="22dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="36dp"
            android:text="@string/yes"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/backgroundRunAllowedTxt"
            app:layout_constraintTop_toBottomOf="@+id/rootAllowedValue" />

        <Button
            android:id="@+id/allowBackgroundRunButt"
            android:layout_width="99dp"
            android:layout_height="37dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="@string/allow"
            app:layout_constraintStart_toEndOf="@+id/backgroundRunAllowedValue"
            app:layout_constraintTop_toBottomOf="@+id/allowRootButt" />

        <EditText
            android:id="@+id/updateTimeBox"
            android:layout_width="76dp"
            android:layout_height="43dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="112dp"
            android:ems="10"
            android:focusable="false"
            android:inputType="time"
            android:longClickable="false"
            android:selectAllOnFocus="false"
            android:text="7:45"
            android:textIsSelectable="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:autofillHints="" />

        <Spinner
            android:id="@+id/updatedPagesSpinner"
            android:layout_width="175dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:entries="@array/updated_pages_entries"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/updateTimeBox" />

        <TextView
            android:id="@+id/allowChangeInternetTxt"
            android:layout_width="242dp"
            android:layout_height="88dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:text="@string/allow_internet_if_missing"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pagesToUpdateTxt" />

        <TextView
            android:id="@+id/pagesToUpdateTxt"
            android:layout_width="135dp"
            android:layout_height="47dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:text="@string/amount_of_pages_to_update"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/updateInTxt" />

        <TextView
            android:id="@+id/updateInTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:text="@string/update_in"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Switch
            android:id="@+id/allowChangeWifiSwitch"
            android:layout_width="91dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="WiFi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/allowChangeInternetTxt"
            app:layout_constraintTop_toTopOf="@+id/allowChangeInternetTxt" />

        <Switch
            android:id="@+id/allowChangeDataSwitch"
            android:layout_width="90dp"
            android:layout_height="27dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:text="Data"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/allowChangeInternetTxt"
            app:layout_constraintTop_toBottomOf="@+id/allowChangeWifiSwitch" />

        <EditText
            android:id="@+id/usernameTextbox"
            android:layout_width="174dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:autofillHints=""
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/mimibazarUsernameTextView"
            app:layout_constraintTop_toBottomOf="@+id/allowBackgroundRunButt" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>